<body>
    <header>
        <h1>üéØ JEE Grand Mock Test</h1>
        <div id="timer">00:00</div>
    </header>

    <main>
        <div id="test-section" class="section">
            <div class="question-card" id="question-container">
                </div>

            <div class="navigation-buttons">
                <button id="prev-btn" onclick="navigateQuestion(-1)">‚¨ÖÔ∏è Previous</button>
                <button id="next-btn" onclick="navigateQuestion(1)">Next ‚û°Ô∏è</button>
            </div>
            
            <button id="submit-test-btn" onclick="confirmSubmission()">FINISH TEST & View Result</button>
        </div>

        <div id="result-section" class="section">
            <h2>üéâ Test Result</h2>
            <div id="result-card">
                <p>Your Final Score (Net Marks):</p>
                <div id="score-display">0</div>
                
                <div class="summary-item">
                    <span>Total Correct Answers:</span>
                    <span id="correct-count" class="value correct-val">0</span>
                </div>
                <div class="summary-item">
                    <span>Total Incorrect Answers:</span>
                    <span id="incorrect-count" class="value incorrect-val">0</span>
                </div>
                <div class="summary-item">
                    <span>Total Unattempted:</span>
                    <span id="unattempted-count" class="value unattempted-val">0</span>
                </div>
                
                <p style="margin-top: 25px;">Keep practising! Success is near.</p>
                <button class="submit-btn" style="background-color: var(--secondary-color);" onclick="window.location.reload()">Start New Test</button>
            </div>
        </div>
    </main>
    
    <script>
        // --- 1. Test Data (The core of your App) ---
        const testQuestions = [
            {
                id: 1,
                subject: "Physics",
                text: "A proton and an $\\alpha$-particle enter a uniform magnetic field with the same velocity. The ratio of the radii of the circular paths followed by them is:",
                options: ["1:2", "2:1", "1:4", "4:1"],
                answer: "1:2" 
            },
            {
                id: 2,
                subject: "Chemistry",
                text: "The correct order of $\\text{C-H}$ bond length in $\\text{C}_2\\text{H}_6$, $\\text{C}_2\\text{H}_4$, and $\\text{C}_2\\text{H}_2$ is:",
                options: ["ethane > ethene > ethyne", "ethene > ethyne > ethane", "ethyne > ethene > ethane", "ethane > ethyne > ethene"],
                answer: "ethane > ethene > ethyne" 
            },
            {
                id: 3,
                subject: "Mathematics",
                text: "If $A$ is a $3 \\times 3$ matrix such that $|A| = 4$, then $|2A^{-1}|$ is equal to:",
                options: ["1/4", "1/2", "2", "8"],
                answer: "2"
            }
        ];

        // --- 2. State Variables ---
        let currentQuestionIndex = 0;
        const userAnswers = new Array(testQuestions.length).fill(null);
        let timeRemaining = 120; // 120 seconds for this short mock test (2 minutes)
        let timerInterval;

        // --- 3. Rendering Functions ---

        /** Loads the current question and its options into the HTML. */
        function loadQuestion() {
            const q = testQuestions[currentQuestionIndex];
            const container = document.getElementById('question-container');
            
            // Generate HTML for the question card
            container.innerHTML = `
                <h3>
                    <span>Question ${q.id} (${q.subject})</span>
                    <span>Q. ${currentQuestionIndex + 1} of ${testQuestions.length}</span>
                </h3>
                <p class="q-text">${q.text}</p>
                <ul class="options-list" id="options-list">
                    ${q.options.map(option => 
                        `<li onclick="selectOption(this, '${option}')">${option}</li>`
                    ).join('')}
                </ul>
            `;
            
            // Highlight saved user answer if it exists
            const savedAnswer = userAnswers[currentQuestionIndex];
            if (savedAnswer) {
                const optionsList = document.getElementById('options-list').children;
                Array.from(optionsList).forEach(li => {
                    if (li.innerText.trim() === savedAnswer) {
                        li.classList.add('selected');
                    }
                });
            }

            // Update navigation button visibility
            document.getElementById('prev-btn').disabled = currentQuestionIndex === 0;
            
            const nextBtn = document.getElementById('next-btn');
            if (currentQuestionIndex === testQuestions.length - 1) {
                nextBtn.innerText = "Review & Finish";
                nextBtn.disabled = true; // Disable Next button on last question
            } else {
                nextBtn.innerText = "Next ‚û°Ô∏è";
                nextBtn.disabled = false;
            }
        }

        /** Saves the selected answer and updates the UI. */
        function selectOption(element, answer) {
            // Remove 'selected' class from all siblings
            const siblings = element.parentElement.children;
            Array.from(siblings).forEach(li => li.classList.remove('selected'));

            // Add 'selected' class to the clicked element
            element.classList.add('selected');

            // Save the answer to the state
            userAnswers[currentQuestionIndex] = answer;
        }

        /** Handles navigation between questions. */
        function navigateQuestion(direction) {
            if (direction === 1 && currentQuestionIndex < testQuestions.length - 1) {
                currentQuestionIndex++;
                loadQuestion();
            } else if (direction === -1 && currentQuestionIndex > 0) {
                currentQuestionIndex--;
                loadQuestion();
            }
            
            // Re-enable the submit button if hidden
            document.getElementById('submit-test-btn').style.display = 'block';
        }
        
        // --- 4. Timer Functions ---

        /** Updates the timer display every second. */
        function updateTimer() {
            const minutes = Math.floor(timeRemaining / 60);
            const seconds = timeRemaining % 60;
            
            document.getElementById('timer').innerText = 
                `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
            
            if (timeRemaining <= 0) {
                clearInterval(timerInterval);
                submitTest(true); // Auto-submit when time runs out
                alert("Time's up! The test has been automatically submitted.");
            } else {
                timeRemaining--;
            }
        }
        
        /** Starts the timer and the test. */
        function startTest() {
            loadQuestion();
            timerInterval = setInterval(updateTimer, 1000);
        }

        // --- 5. Submission and Result Functions ---

        /** Confirms submission with the user. */
        function confirmSubmission() {
            if (confirm("Are you sure you want to finish the test? You cannot change answers after submission.")) {
                submitTest(false);
            }
        }

        /** Calculates and displays the final score. */
        function submitTest(isAutoSubmit) {
            clearInterval(timerInterval);
            
            let correctCount = 0;
            let incorrectCount = 0;
            let unattemptedCount = 0;
            
            // JEE Scoring: +4 for correct, -1 for incorrect, 0 for unattempted
            let netScore = 0;

            testQuestions.forEach((q, index) => {
                const userAnswer = userAnswers[index];
                
                if (userAnswer === null) {
                    unattemptedCount++;
                } else if (userAnswer === q.answer) {
                    correctCount++;
                    netScore += 4;
                } else {
                    incorrectCount++;
                    netScore -= 1;
                }
            });

            // Update Result Section
            document.getElementById('correct-count').innerText = correctCount;
            document.getElementById('incorrect-count').innerText = incorrectCount;
            document.getElementById('unattempted-count').innerText = unattemptedCount;
            document.getElementById('score-display').innerText = netScore;
            
            // Change view to Result Section
            document.getElementById('test-section').style.display = 'none';
            document.getElementById('result-section').style.display = 'block';
        }

        // Initialize the app on load
        window.onload = startTest;
    </script>
</body>
</html>
