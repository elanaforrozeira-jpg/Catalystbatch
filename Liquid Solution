            {id:21, text:"PA¬∞=300, PB¬∞=800 torr, XB=92%, Ptot=0.95atm. Solution type?", options:["ŒîVmix=0","ŒîHmix<0","ŒîVmix>0","ŒîHmix>0"], correct:1, yt:"https://youtu.be/7MSzROji2sk", ans:"B"},
            {id:22, text:"CHCl3+ethylmethylketone correct facts?", options:["4"], correct:0, yt:"https://youtu.be/NGnfy2LkEcQ", ans:"4"},
            {id:23, text:"Henry's law incorrect statement?", options:["KH gas-solvent specific","Higher KH=lower solubility","Higher KH=higher solubility","KH‚Üëwith T"], correct:2, yt:"https://youtu.be/O78hbxxQXoI", ans:"C"},
            {id:24, text:"H2S 2mg/L, 20¬∞C, KH=6.8√ó10¬≥ bar. Headspace P=", options:["720Pa","77√ó10¬≤Pa","553Pa","55√ó10¬≤Pa"], correct:0, yt:"https://youtu.be/rKXJuxPT7o0", ans:"A"},
            {id:25, text:"Same mass: ŒîTf C6H6=1.28¬∞C (Kf=5.12), H2O=1.40¬∞C (Kf=1.86). Ions in water?", options:["3"], correct:0, yt:"https://youtu.be/MFm6Q-CqAt8", ans:"3 ions"}
        ];

        let currentQ = 0, timeLeft = 45*60, timerId, answers = new Array(25).fill(-1), score = 0;

        function initTest() {
            showQuestion(currentQ);
            startTimer();
        }

        function startTimer() {
            timerId = setInterval(() => {
                let min = Math.floor(timeLeft/60), sec = timeLeft%60;
                document.getElementById('timer').textContent = `Time Left: ${min.toString().padStart(2,'0')}:${sec.toString().padStart(2,'0')}`;
                if(timeLeft <= 0) { clearInterval(timerId); submitTest(); }
                timeLeft--;
            }, 1000);
        }

        function showQuestion(index) {
            const q = questionsData[index];
            document.getElementById('questionSection').innerHTML = `
                <div class="question-card">
                    <div class="q-number">Q${q.id}.</div>
                    <div class="q-text">${q.text}</div>
                    <div class="options-grid">
                        ${q.options.map((opt,i)=>`
                            <div class="option ${answers[index]===i?'selected':''}" onclick="selectOption(${index},${i})">
                                <input type="radio" name="q${q.id}" value="${i}" ${answers[index]===i?'checked':''}>
                                <span>${String.fromCharCode(65+i)}. ${opt}</span>
                            </div>
                        `).join('')}
                    </div>
                </div>
            `;
            document.getElementById('progress').textContent = `Question ${index+1} of 25`;
            document.getElementById('prevBtn').style.display = index>0?'block':'none';
            document.getElementById('nextBtn').style.display = 'block';
            document.getElementById('submitBtn').style.display = index===24?'block':'none';
        }

        function selectOption(qIdx, optIdx) {
            answers[qIdx] = optIdx;
            showQuestion(currentQ);
        }

        function nextQuestion() {
            if(answers[currentQ]===-1) answers[currentQ] = 0;
            currentQ++;
            if(currentQ < 25) showQuestion(currentQ);
        }

        function prevQuestion() {
            currentQ--;
            showQuestion(currentQ);
        }

        function submitTest() {
            clearInterval(timerId);
            score = answers.reduce((total,ans,i)=> ans===questionsData[i].correct ? total+1 : total, 0);
            
            let scoreClass = score>=20?'score-20':score>=15?'score-15':'score-low';
            document.getElementById('questionSection').style.display = 'none';
            document.querySelector('.top-bar').style.display = 'none';
            document.querySelector('.controls').style.display = 'none';
            
            document.getElementById('results').innerHTML = `
                <h2 style="color:#2c3e50;font-size:36px;margin-bottom:40px;">üéâ Test Completed!</h2>
                <div class="score-circle ${scoreClass}">
                    ${score}/25<br><small style="font-size:18px;">${Math.round(score/25*100)}%</small>
                </div>
                <div style="max-height:500px;overflow-y:auto;margin:40px 0;">
                    ${questionsData.map((q,i)=>{
                        let status = answers[i]===q.correct?'correct-ans':'wrong-ans';
                        let userAns = answers[i]>=0 ? String.fromCharCode(65+answers[i]) : 'Not Attempted';
                        let corrAns = String.fromCharCode(65+q.correct);
                        return `
                            <div class="answer-item ${status}">
                                <strong>Q${q.id}:</strong> 
                                <span style="color:${answers[i]===q.correct?'#27ae60':'#e74c3c'};font-size:18px;font-weight:bold;">
                                    ${corrAns} ${q.options[q.correct]}
                                </span><br><br>
                                <small style="color:#666;">Your: ${userAns===corrAns?'‚úÖ Correct':'‚ùå '+userAns}</small><br>
                                <a href="${q.yt}" target="_blank" class="youtube-link">üì∫ Watch Detailed Solution</a>
                            </div>
                        `;
                    }).join('')}
                </div>
                <button class="btn" onclick="location.reload()" style="background:linear-gradient(135deg,#e74c3c,#c0392b);padding:20px 50px;font-size:20px;">üîÑ Retake Test</button>
            `;
            document.getElementById('results').style.display = 'block';
        }

        initTest();
    </script>
