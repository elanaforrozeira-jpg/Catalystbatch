            {id:10, text:"5% cane sugar FP=271K (water 273K). 5% glucose FP=", options:["271K","3.8K","269.2K","276.8K"], correct:2, yt:"https://youtu.be/ll5lAFdRtjY", ans:"C"},
            {id:11, text:"ŒîTb 1M glucose (density 1.2g/ml)=", options:["Kb","1.20Kb","1.02Kb","0.98Kb"], correct:3, yt:"https://youtu.be/9PivouqUM3I", ans:"D"},
            {id:12, text:"Boiling point Solution I at 3 atm=", options:["300K","400K","500K","600K"], correct:2, yt:"https://youtu.be/1S16RkcHHuE", ans:"C"},
            {id:13, text:"œÄ glucose=1.20atm, sucrose=2.5atm. Equal vol mix œÄ=", options:["2.5atm","3.7atm","1.85atm","1.3atm"], correct:2, yt:"https://youtu.be/4qHTFIMZWmk", ans:"C"},
            {id:14, text:"FeCl3+K4Fe(CN)6 blue colour, semipermeable membrane. Osmosis effect=", options:["Blue in X","Blue in Y","Blue both","No blue"], correct:3, yt:"https://youtu.be/xXZxyoDuEGU", ans:"D"},
            {id:15, text:"nA‚ÜíAn (Œ±=degree assoc). i=?", options:["1+Œ±","1-Œ±/n","1+Œ±(n-1)","1-Œ±"], correct:2, yt:"https://youtu.be/UdelbbXQQWY", ans:"C"},
            {id:16, text:"Van't Hoff factor wrong match?", options:["Na2SO4 50%‚Üí2","K3Fe(CN)6 75%‚Üí3.25","Ag(NH3)2Cl 80%‚Üí1.8","Cr(NH3)5ClSO4 90%‚Üí2.8"], correct:3, yt:"https://youtu.be/OPiMIAVKRjw", ans:"D"},
