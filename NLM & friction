        let currentQuestion = 0;
        let answers = new Array(questions.length).fill(-1);
        let timeLeft = 45 * 60;
        let timerInterval;
        let testSubmitted = false;

        function startTimer() {
            timerInterval = setInterval(() => {
                timeLeft--;
                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                document.getElementById('timeLeft').textContent = 
                    `${minutes}:${seconds.toString().padStart(2, '0')}`;
                
                if (timeLeft <= 0) {
                    clearInterval(timerInterval);
                    submitTest();
                }
            }, 1000);
        }

        function loadQuestion(index) {
            const q = questions[index];
            const container = document.getElementById('questionContainer');
            
            let html = `
                <div class="question">
                    <div class="q-number">Q${index + 1}</div>
                    <div class="q-text">${q.text}</div>
            `;
            
            if (q.diagram) {
                html += `<div class="diagram">${q.diagram}</div>`;
            }
            
            if (q.type === 'numeric') {
                html += `
                    <input type="number" id="numAnswer${index}" style="width:200px; padding:15px; font-size:18px; border:2px solid #ddd; border-radius:10px; margin-top:20px;" placeholder="Enter numeric answer">
                `;
            } else {
                html += '<div class="options">';
                q.options.forEach((option, i) => {
                    const selected = answers[index] === i ? 'selected' : '';
                    html += `<div class="option ${selected}" onclick="selectOption(${index}, ${i})">${option}</div>`;
                });
                html += '</div>';
            }
            
            html += '</div>';
            container.innerHTML = html;
            
            // Load saved numeric answer
            if (q.type === 'numeric' && answers[index] !== -1) {
                document.getElementById(`numAnswer${index}`).value = answers[index];
            }
            
            updateNavigation();
            updateProgress();
        }

        function selectOption(qIndex, optionIndex) {
            answers[qIndex] = optionIndex;
            loadQuestion(currentQuestion); // Reload to update UI
        }

        function changeQuestion(direction) {
            const newIndex = currentQuestion + direction;
            if (newIndex >= 0 && newIndex < questions.length) {
                currentQuestion = newIndex;
                loadQuestion(currentQuestion);
            }
        }

        function updateNavigation() {
            document.getElementById('prevBtn').disabled = currentQuestion === 0;
            document.getElementById('nextBtn').disabled = currentQuestion === questions.length - 1;
        }

        function updateProgress() {
            document.getElementById('currentQ').textContent = currentQuestion + 1;
        }

        function showSubmitModal() {
            document.getElementById('submitModal').style.display = 'block';
            calculateScore();
        }

        function submitTest() {
            testSubmitted = true;
            clearInterval(timerInterval);
            showSubmitModal();
        }

        function calculateScore() {
            let score = 0;
            questions.forEach((q, i) => {
                if (q.type === 'numeric') {
                    const userAns = parseFloat(answers[i]);
                    const correctAns = parseFloat(q.answer);
                    if (!isNaN(userAns) && Math.abs(userAns - correctAns) < 0.1) {
                        score++;
                    }
                } else if (answers[i] === q.answer) {
                    score++;
                }
            });
            
            document.getElementById('finalScore').textContent = `${score}/${questions.length}`;
            const percentage = Math.round((score / questions.length) * 100);
            document.getElementById('scoreMessage').textContent = 
                percentage >= 80 ? 'üéâ Excellent!' : 
                percentage >= 60 ? 'üëç Good!' : 
                percentage >= 40 ? 'üìö Keep Practicing!' : 'üí™ Try Again!';
        }

        function restartTest() {
            document.getElementById('submitModal').style.display = 'none';
            currentQuestion = 0;
            answers = new Array(questions.length).fill(-1);
            timeLeft = 45 * 60;
            testSubmitted = false;
            startTimer();
            loadQuestion(0);
        }

        function showAnswers() {
            document.getElementById('submitModal').style.display = 'none';
            answers = questions.map(q => q.answer);
            currentQuestion = 0;
            loadQuestion(0);
        }

        // Initialize
        window.onload = () => {
            loadQuestion(0);
            startTimer();
            
            // Prevent right click and shortcuts
            document.addEventListener('contextmenu', e => e.preventDefault());
            document.onkeydown = (e) => {
                if (e.ctrlKey && (e.key === 'u' || e.key === 's' || e.key === 'p')) {
                    e.preventDefault();
                }
            };
        };
    </script>
</body>
</html>
