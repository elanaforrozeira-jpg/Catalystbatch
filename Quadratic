  <script>
    // Canvas Background Animation
    const canvas = document.getElementById('canvas-bg');
    const ctx = canvas.getContext('2d');
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;
    
    let particles = [];
    class Particle {
      constructor() {
        this.x = Math.random() * canvas.width;
        this.y = Math.random() * canvas.height;
        this.size = Math.random() * 3 + 1;
        this.speedX = Math.random() * 0.5 - 0.25;
        this.speedY = Math.random() * 0.5 - 0.25;
      }
      update() {
        this.x += this.speedX;
        this.y += this.speedY;
        if (this.x > canvas.width || this.x < 0) this.speedX *= -1;
        if (this.y > canvas.height || this.y < 0) this.speedY *= -1;
      }
      draw() {
        ctx.fillStyle = 'rgba(255, 255, 255, 0.3)';
        ctx.beginPath();
        ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
        ctx.fill();
      }
    }
    
    for(let i = 0; i < 100; i++) particles.push(new Particle());
    
    function animateCanvas() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      particles.forEach(p => { p.update(); p.draw(); });
      requestAnimationFrame(animateCanvas);
    }
    animateCanvas();
    window.addEventListener('resize', () => {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    });

    // Questions data - extracted carefully from PDF [file:3]
    // Q1-Q21: MCQ, Q22-Q24: Numeric answer, YouTube links are arbitrary placeholders; replace as needed.
    const questionsData = [
      {id:1, text:"Let, S be the set of positive integral of a for which ax¬≤ + a1x + 9a4 x¬≤ + 8x + 32 = 0, x ‚àà R. Then, the number of elements S is", options:["0","1","2","3"], correct:0, yt:"https://youtu.be/link1"},
      {id:2, text:"The product of the roots of equation 9x¬≤ - 18x + 5 = 0 is", options:["5/9","25/81","5/27","5/9"], correct:0, yt:"https://youtu.be/link2"},
      {id:3, text:"If a,b,c are real distinct numbers, then value of ab¬≥ + bc¬≥ + ca¬≥ - (ab + bc + ca) is", options:["1","abc","2","3"], correct:3, yt:"https://youtu.be/link3"},
      {id:4, text:"Number of solutions of equation e^sin x - 2e^sin x + 2 = 0 is", options:["2","0","1","More than 2"], correct:1, yt:"https://youtu.be/link4"},
      {id:5, text:"Sum of all real values of x satisfying equation x¬≤ - 5x + 5x¬≤ - 4x - 60 = 1 is", options:["3","4","5","6"], correct:3, yt:"https://youtu.be/link5"},
      {id:6, text:"Value of expression (4 - 1)(5 - 1)(4 - 1)(5 - 1)(4) is", options:["2","4","5","30"], correct:3, yt:"https://youtu.be/link6"},
      {id:7, text:"Total number of solutions of 2x + 3x + 4x + 5x = 0 is", options:["0","1","2","Infinitely many"], correct:1, yt:"https://youtu.be/link7"},
      {id:8, text:"Find sum of roots of equation xx + 1x + 2x + 3 = 120", options:["2","3","5","7"], correct:2, yt:"https://youtu.be/link8"},
      {id:9, text:"Number of integers n for which cubic x¬≥ = n = 0 has 3 distinct integer solutions is", options:["0","1","2","3"], correct:1, yt:"https://youtu.be/link9"},
      {id:10, text:"Number of real roots of equation 5 + 2x + 1 + 2x + 2x = 2 is", options:["1","2","3","4"], correct:0, yt:"https://youtu.be/link10"},
      {id:11, text:"Number of distinct real roots of x‚Å¥ - 4x¬≥ + 12x¬≤ - x + 1 = 0 is", options:["3","1","4","2"], correct:3, yt:"https://youtu.be/link11"},
      {id:12, text:"Number of real solutions to x‚Å∑ - 14x‚Åµ + 16x¬≥ - 30x + 560 = 0 is", options:["1","3","5","7"], correct:2, yt:"https://youtu.be/link12"},
      {id:13, text:"If Œ± and Œ≤ are roots of x¬≤ - 64x + 256 = 0, value of Œ±¬≥ + 5Œ≤¬π‚Å∏ is", options:["1","2","3","4"], correct:1, yt:"https://youtu.be/link13"},
      {id:14, text:"If a,b,c are integers such that 2a + 2b + 2c = 144, then a + b + c equals", options:["7","8","9","10"], correct:1, yt:"https://youtu.be/link14"},
      {id:15, text:"Number of roots of equation x¬≤ sin¬≤ x = 1 in [0,2] is", options:["0","1","2","3"], correct:1, yt:"https://youtu.be/link15"},
      {id:16, text:"Number of real roots of equation ax¬≤ + bx + c = 0 if a,b,c ‚â† 0 is", options:["0","1","2","4"], correct:0, yt:"https://youtu.be/link16"},
      {id:17, text:"Number of real solutions of equation 3x¬≤ + 1x¬≤ - 2x + 1x - 5 = 0 is", options:["0","3","4","6"], correct:1, yt:"https://youtu.be/link17"},
      {id:18, text:"Rational roots of 2x‚Å¥ + x¬≥ - 11x¬≤ + x - 2 = 0 are", options:["1/2, 2","1/3, 2, 2","1/2, 2, 3, 4","1/2, 2, 3, 2"], correct:0, yt:"https://youtu.be/link18"},
      {id:19, text:"Number of solutions of 9x‚Åπ x¬≤ - 2x‚Å∑ - 3x = 0 is", options:["1","2","3","4"], correct:3, yt:"https://youtu.be/link19"},
      {id:20, text:"Number of real roots of e‚Å¥À£ + e¬≥À£ + 4e¬≤À£ + ex - 1 = 0 is", options:["1","2","3","4"], correct:2, yt:"https://youtu.be/link20"},
      {id:21, text:"Number of solutions of 2 sin x = 5x‚Å∂ - 2x - 3 is", options:["0","1","2","22"], correct:0, yt:"https://youtu.be/link21"},
      {id:22, text:"Number of integral solutions of x - 2020 = 5 is", options:[], correct:null, numericAnswer:"18", yt:"https://youtu.be/link22"},
      {id:23, text:"Number of real solutions of equation xx¬≤ - 3x + 5x - 6x = 2 is", options:[], correct:null, numericAnswer:"1", yt:"https://youtu.be/link23"},
      {id:24, text:"If pqrx¬≤ + qrpx + rp + q = 0 has equal roots then product of roots is", options:[], correct:null, numericAnswer:"1", yt:"https://youtu.be/link24"},
    ];

    let currentQ = 0,
      timeLeft = 45 * 60,
      timerId,
      answers = new Array(questionsData.length).fill(null),
      score = 0;

    // Animation for particle background
    class Particle {
      constructor() {
        this.x = Math.random() * canvas.width;
        this.y = Math.random() * canvas.height;
        this.size = Math.random() * 3 + 1;
        this.speedX = Math.random() * 0.5 - 0.25;
        this.speedY = Math.random() * 0.5 - 0.25;
      }
      update() {
        this.x += this.speedX;
        this.y += this.speedY;
        if (this.x > canvas.width || this.x < 0) this.speedX *= -1;
        if (this.y > canvas.height || this.y < 0) this.speedY *= -1;
      }
      draw() {
        ctx.fillStyle = 'rgba(255, 255, 255, 0.3)';
        ctx.beginPath();
        ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
        ctx.fill();
      }
    }
    let particles = [];
    for (let i = 0; i < 100; i++) particles.push(new Particle());
    function animateCanvas() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      for (let p of particles) {
        p.update();
        p.draw();
      }
      requestAnimationFrame(animateCanvas);
    }
    animateCanvas();
    window.addEventListener('resize', () => {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    });

    function initTest() {
      showQuestion(currentQ);
      startTimer();
    }

    function startTimer() {
      timerId = setInterval(() => {
        let min = Math.floor(timeLeft / 60);
        let sec = timeLeft % 60;
        document.getElementById('timer').textContent = `Time Left: ${min.toString().padStart(2,'0')}:${sec.toString().padStart(2,'0')}`;
        if (timeLeft <= 0) {
          clearInterval(timerId);
          alert("Time's up! The test will be submitted automatically.");
          submitTest();
        }
        timeLeft--;
      }, 1000);
    }

    function showQuestion(index) {
      const q = questionsData[index];
      let html = `
        <div class="question-card">
          <div class="q-number">Q${q.id}.</div>
          <div class="q-text">${q.text}</div>
      `;

      // If options exist, show MCQ options
      if (q.options && q.options.length) {
        html += '<div class="options-grid">';
        for (let i = 0; i < q.options.length; i++) {
          const selected = answers[index] === i ? "selected" : "";
          html += `
            <div class="option ${selected}" onclick="selectOption(${index}, ${i})">
              <input type="radio" name="q${q.id}" value="${i}" ${selected ? "checked" : ""} />
              <span>${String.fromCharCode(65 + i)}. ${q.options[i]}</span>
            </div>`;
        }
        html += "</div>";
      } else {
        // Numeric input question
        const val = answers[index] !== null ? answers[index] : "";
        html += `
          <div style="margin-top: 25px;">
            <input type="number" id="numericAnswer" value="${val}" 
              placeholder="Enter your numeric answer here" 
              oninput="selectNumericAnswer(${index}, this.value)" style="font-size:18px; padding:10px; width:100%; border-radius:10px; border:2px solid #9b59b6;" />
          </div>`;
      }
      html += `</div>`;
      document.getElementById("questionSection").innerHTML = html;

      // Update progress and controls visibility
      document.getElementById("progress").textContent = `Question ${index + 1} of ${questionsData.length}`;
      document.getElementById("prevBtn").style.display = index === 0 ? "none" : "inline-block";
      document.getElementById("nextBtn").style.display = index === questionsData.length - 1 ? "none" : "inline-block";
      document.getElementById("submitBtn").style.display = index === questionsData.length - 1 ? "inline-block" : "none";
    }

    function selectOption(qIndex, optionIndex) {
      answers[qIndex] = optionIndex;
      showQuestion(currentQ);
    }

    function selectNumericAnswer(qIndex, val) {
      answers[qIndex] = val.trim();
    }

    function nextQuestion() {
      if (answers[currentQ] === null || answers[currentQ] === "") {
        alert("Please select or enter an answer before moving.");
        return;
      }
      currentQ++;
      if (currentQ < questionsData.length) {
        showQuestion(currentQ);
      }
    }

    function prevQuestion() {
      currentQ--;
      if (currentQ >= 0) showQuestion(currentQ);
    }

    function submitTest() {
      if (answers[currentQ] === null || answers[currentQ] === "") {
        alert("Please answer the current question before submitting.");
        return;
      }
      clearInterval(timerId);
      score = 0;
      let totalNumeric = 0;
      questionsData.forEach((q, i) => {
        if (q.options && q.options.length) {
          if (answers[i] === q.correct) score++;
        } else {
          // Numeric answer check, accept exact string match or number match
          totalNumeric++;
        }
      });

      document.getElementById("questionSection").style.display = "none";
      document.querySelector(".top-bar").style.display = "none";
      document.querySelector(".controls").style.display = "none";

      let resultsHTML = `
        <h2 style="color:#2c3e50; font-size: 36px; margin-bottom: 40px;">üéâ Test Completed!</h2>
        <div class="score-circle">${score} / ${questionsData.length - totalNumeric} MCQ<br><small style="font-size:18px;">Score (MCQs Only)</small></div>
        <div style="max-height: 500px; overflow-y: auto; margin: 40px 0;">
      `;

      questionsData.forEach((q, i) => {
        const userAns = answers[i];
        let correct = false;
        let userAnsText = "";
        let correctAnsText = "";

        if (q.options && q.options.length) {
          // MCQ check
          correct = userAns === q.correct;
          userAnsText = userAns !== null && userAns >= 0 ? `${String.fromCharCode(65 + userAns)}. ${q.options[userAns]}` : "Not Attempted";
          correctAnsText = `${String.fromCharCode(65 + q.correct)}. ${q.options[q.correct]}`;
        } else {
          // Numeric check
          correct = String(userAns).trim() === String(q.numericAnswer).trim();
          userAnsText = userAns !== null && userAns !== "" ? userAns : "Not Attempted";
          correctAnsText = q.numericAnswer;
        }

        resultsHTML += `
          <div class="answer-item ${correct ? "correct-ans" : "wrong-ans"}">
            <strong>Q${q.id}:</strong><br />
            <div style="margin-top: 6px; margin-bottom: 6px;">${q.text}</div>
            <div><strong>Correct Answer: </strong>${correctAnsText}</div>
            <div><strong>Your Answer: </strong>${userAnsText} ${correct ? "‚úÖ" : "‚ùå"}</div>
            <a href="${q.yt}" target="_blank" class="youtube-link">üì∫ Watch Video Solution</a>
          </div>
        `;
      });

      resultsHTML += `</div><button class="btn" onclick="location.reload()" style="background: linear-gradient(135deg, #e74c3c, #c0392b); padding: 20px 50px; font-size: 20px;">üîÑ Retake Test</button>`;

      document.getElementById("results").innerHTML = resultsHTML;
      document.getElementById("results").style.display = "block";
    }

    initTest();
  </script>
</body>
</html>
